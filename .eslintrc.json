{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "spaced-comment": "off",
    "no-console": "off",
    //So here is the configurations you have added
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["off", { "object": true, "array": false }],
    //so here we give an error if we dont use a variable, except  for the standard response variables
    "no-unused-vars": ["off", { "argsIgnorePattern": "req|res|next|val" }]
  }
}
